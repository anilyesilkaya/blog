source "https://rubygems.org"

# Use the GitHub Pages gem (pins Jekyll + supported plugins)
gem "github-pages", group: :jekyll_plugins

# Optional: if you want RSS feed
gem "jekyll-feed", "~> 0.17"

# Windows timezone + file watcher niceties
platforms :mingw, :x64_mingw, :mswin do
  gem "tzinfo-data"
  gem "wdm", "~> 0.1"
end
